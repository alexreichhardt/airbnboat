


<div class="grid">


  <div class="profile-info">
      <div class="card1">
        <h2> hey <%= @user.email%> </h2>
        <%= cl_image_tag @user.avatar, crop: :fill %>
        <p><%= link_to "Change your password", edit_user_registration_path %></p>
        <p><%= link_to "Change your avatar", edit_avatar_path %></p>
      </div>
  </div>


  <div class="boats-bookings">

    <% if @boats.any? %>
      <% @boats.each do |boat| %>
        <div class="card1">
          <h1><%= boat.title %> <i><%= link_to("", edit_boat_path(boat) , :class => "fas fa-edit") %></i>
          <i><%= link_to("", boat_path(boat), method: :delete, data: { confirm: "Are you sure?" }, :class => "fas fa-trash-alt") %></h1></i>


          <h3><%= boat.description %></h3>
          <p>City: <%= boat.city %></p>
          <p>Person Capacity: <%= boat.person_capacity %></p>
          <%= link_to("Show Boat", boat_path(boat), :class => "btn btn-primary") %>

        </div>
      <% end %>
    <% else %>
      <div class="card1">
        no boats
      </div>
    <% end %>

    <% if @bookings.any?  %>
      <% @bookings.each do |booking| %>
        <div class="card1">
        <p><%= @user.email %></p>
        <p><%= Boat.find(booking.boat_id).title %></p>
        <p><%= Boat.find(booking.boat_id).description %></p>
        <p><%= booking.start_date %></p>
        <p><%= booking.end_date %></p>
        <p><%= booking.license %></p>

        <% if BookingReview.where(booking_id: booking.id).first.nil? %>
          <%= link_to("Add review", new_booking_booking_review_path(booking.id)) %>
        <% else %>
          <%= link_to("Show review", booking_booking_review_path(booking.id, BookingReview.where(booking_id: booking.id).first.id)) %>
        <% end %>
        </div>
      <% end %>



    <% else %>
      <div class="card1">
        no bookings
      </div>
    <% end %>








