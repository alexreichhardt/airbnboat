<div class="container-all" style="min-height: calc(100vh - 70px - 131px);">
  <div class="banner-confirm">
    <h1>Thank you for booking! Have a nice Trip!</h1>
  </div>
  <div class="container" >
    <div class="row">
      <div class="col-md-offset-3 col-xs-12 col-md-6">
        <div class="card-overview">
          <div>
           <p>Your booking ID is <%= @booking.id %></p>
           <p>Price: <%= @booking.price  %></p>
           <p>Persons going: <%= @persons_going %></p>
           <p>Capacity:<%= @booking.boat.person_capacity %></p>
           <p>Start date: <%= @booking.start_date %></p>
           <p>End date: <%= @booking.end_date %> </p>


           <%= link_to "Back to all bookings", user_path(current_user.id), class: "search-c5a"  %>
         </div>
       </div>
     </div>
   </div>
 </div>
</div>
