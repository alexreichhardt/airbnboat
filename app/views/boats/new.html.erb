



<div class="container-form">
  <div class="row">
    <div class="col-sm-offset-4 col-sm-4">
      <div class="form-box" style="margin-top: 20px">

 <h2>Add a new boat</h2>
    <%= simple_form_for(@boat) do |f| %>
      <div class="form-group-new">

        <%= f.input :title, as: :string %>
      </div>
      <div class="form-group-new">

        <%= f.input :description, as: :string %>
      </div>
      <div class="form-group-new">
        <%= f.label :city, as: :string %>
        <%= f.text_field :city, as: :string,  :id => "criteria_location" %>
      </div>
      <div class="form-group-new">

        <%= f.input :person_capacity, as: :integer %>
      </div>
      <div class="form-group-new">

        <%= f.input :price, as: :integer %>
      </div>
      <div class="form-group-new">
       <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker mr-sm-2 "}, :placeholder => "Starts at" %>
      </div>
      <div class="form-group-new">
        <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker mr-sm-2"}, :placeholder => "Ends at" %>
      </div>

        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>

        <%= f.button :submit, "Create Boat", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
    </div>
      </div>

