


  <h1>Boats#new</h1>
  <p>Find me in app/views/boats/new.html.erb</p>
  <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
    <div class="container">

    <%= simple_form_for(@boat) do |f| %>
      <div class="form-group">
        <%= f.label :title, as: :string %>
        <%= f.text_field :title, as: :string %>
      </div>
      <div class="form-group">
        <%= f.label :description, as: :string %>
        <%= f.text_field :description, as: :string %>
      </div>
      <div class="form-group">
        <%= f.label :city, as: :string %>
        <%= f.text_field :city, as: :string,  :id => "criteria_location" %>
      </div>
      <div class="form-group">
        <%= f.label :person_capacity, as: :integer %>
        <%= f.text_field :person_capacity, as: :integer %>
      </div>
      <div class="form-group">
        <%= f.label :price, as: :integer %>
        <%= f.text_field :price, as: :integer %>
      </div>
      <div class="form-group">
       <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker mr-sm-2 "}, :placeholder => "Starts at" %>
      </div>
      <div class="form-group">
        <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker mr-sm-2"}, :placeholder => "Ends at" %>
      </div>
      <div class="form-group">
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
      </div>
        <%= f.button :submit, "Create Boat", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
