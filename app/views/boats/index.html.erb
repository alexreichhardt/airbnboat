


<div class="main-container">

  <div class="filter-bar">
    <%= form_tag boats_path, method: :get do %>
    <%= select_tag "price", "<option>100</option><option>500</option><option>750</option><option>1000</option>".html_safe%>
    <%= hidden_field_tag :pricefilter, "yes" %>
    <%= hidden_field_tag :start_date, @start_date %>
    <%= hidden_field_tag :end_date, @end_date %>
    <%= hidden_field_tag :location, @location %>
    <%= hidden_field_tag :persons_going, @persons_going %>
    <%= hidden_field_tag :capacity, @search_capacity %>
    <div><%= submit_tag 'Save' %></div>
    <% end %>
  </div>

  <div class="cards-container">
    <div class="row">

        <% @boats.each do |boat| %>
        <div class="col-xs-12 col-sm-6">

            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_path(boat.photo) %>);">

              <div class="card-category"><%= boat.price %></div>
              <div class="card-description">
                <h2> <%= boat.title %> </h2>
                <p> <%= boat.person_capacity %></p>
              </div>
              <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
                <%= link_to "", boat_path(boat, capacity: @search_capacity, start_date: @start_date, end_date: @end_date, persons_going: @persons_going, location: @location ), class: "card-link" %>
            </div>
        </div>
        <% end %>


    </div>

  </div>

  <div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  >
  </div>

</div>




