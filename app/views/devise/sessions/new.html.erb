          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <!-- # f.input :remember_me, class: "deviselabels", as: :boolean if devise_mapping.rememberable? -->
        </div>


          <%= f.button :submit , "Log in", class: "search-c4a" %>

        <% end %>

        <div class="footer-form">
          <%= render "devise/shared/links" %></p>
        </div>
      </div>
    </div>

  </div>
  <div style="height: calc(100vh - 70px - 471px - 112px)"></div>
</div>
