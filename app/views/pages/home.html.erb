

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= asset_path('boat.jpg') %>');">
  <div class="banner-content">
    <div class="container">
  <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
    <h2>Start your search! </h2>

    <%= simple_form_for :criteria, url: boats_path, :method => :get do |f| %>
      <%= f.input :location, :id => "location", as: :string %>
      <%= f.input :person, as: :integer %>
      <%= f.input :starts_at, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.input :ends_at, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.button :submit, "Go", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
  </div>
</div>
