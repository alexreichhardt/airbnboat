        <%= simple_form_for :criteria, url: boats_path,
        wrapper: :inline_form,
        html: { class: "form-inline" },
        wrapper_mappings: {
          boolean: :inline_boolean
        },:method => :get do |f| %>

        <%= f.input :location, :id => "location", as: :string ,input_html: { class: "mr-sm-2" } %>
        <%= f.input :person, as: :integer , input_html: { class: "mr-sm-2" } , :placeholder => "People number" %>
        <%= f.input :starts_at, as: :string, required: false, input_html: {class: "datepicker mr-sm-2 "}, :placeholder => "Starts at" %>

        <%= f.input :ends_at, as: :string, required: false, input_html: {class: "datepicker mr-sm-2"} , :placeholder => "Ends at" %>

        <%= f.button :submit, "Go", class: "btn btn-primary mx-sm-2"  %>
        <% end %>
